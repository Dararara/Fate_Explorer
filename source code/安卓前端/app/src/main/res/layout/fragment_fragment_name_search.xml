<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentNameSearch">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/prompt_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:src="@drawable/prompt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/custom_prompt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/name_search_prompt"
        android:background="#00000000"/>
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/name_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="咕哒子？不就在这里吗？"
            android:layout_marginRight="0dp"
            android:selectAllOnFocus="true"

            app:layout_constraintEnd_toStartOf="@id/name_search_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prompt_image" />

        <Button
            android:id="@+id/name_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginLeft="0dp"
            android:text="召唤！"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/name_input"
            app:layout_constraintTop_toBottomOf="@id/prompt_image" />

    </LinearLayout>


</LinearLayout>