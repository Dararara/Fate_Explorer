<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/servent_container"
        >
        <include
            layout="@layout/toolbar_main"
            android:id="@+id/toolbar_s"
            />
        <ImageView
            android:id="@+id/servent_pic"
            android:layout_width="206dp"
            android:layout_height="322dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="4dp"
            android:padding="16dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/servent_content_container"

                >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/double_item_text_style"
                        android:layout_height="wrap_content"
                        android:id="@+id/servent_name"
                        android:text="name"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/servent_name_jap"
                        style="@style/double_item_text_style"
                        android:layout_height="wrap_content"
                        android:text="gender" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/servent_name_eng"
                        style="@style/double_item_text_style"
                        android:layout_height="wrap_content"
                        android:text="gender" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            style="@style/double_item_text_style"
                            android:id="@+id/region"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="region"
                            />
                        <TextView
                            style="@style/double_item_text_style"
                            android:id="@+id/origin"
                            android:layout_height="wrap_content"
                            android:text="origin"

                            />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/gender"
                            style="@style/double_item_text_style"
                            android:layout_height="wrap_content"
                            android:text="gender" />

                        <TextView
                            android:id="@+id/servent_class"
                            style="@style/double_item_text_style"
                            android:layout_height="wrap_content"
                            android:text="servent_class"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/height"
                            style="@style/double_item_text_style"
                            android:layout_height="wrap_content"
                            android:text="gender" />

                        <TextView
                            android:id="@+id/weight"
                            style="@style/double_item_text_style"
                            android:layout_height="wrap_content"
                            android:text="servent_class"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/strength"
                            style="@style/double_item_text_style"
                            android:layout_height="wrap_content"
                            android:text="gender" />

                        <TextView
                            android:id="@+id/endurance"
                            style="@style/double_item_text_style"
                            android:layout_height="wrap_content"
                            android:text="servent_class"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/agility"
                            style="@style/double_item_text_style"
                            android:layout_height="wrap_content"
                            android:text="gender" />

                        <TextView
                            android:id="@+id/mana"
                            style="@style/double_item_text_style"
                            android:layout_height="wrap_content"
                            android:text="servent_class"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/luck"
                            style="@style/double_item_text_style"
                            android:layout_height="wrap_content"
                            android:text="gender" />

                        <TextView
                            android:id="@+id/noble_phantasm"
                            style="@style/double_item_text_style"
                            android:layout_height="wrap_content"
                            android:text="servent_class"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/illustrator"
                            style="@style/double_item_text_style"
                            android:layout_height="wrap_content"
                            android:text="gender" />

                        <TextView
                            android:id="@+id/voice_actor"
                            style="@style/double_item_text_style"
                            android:layout_height="wrap_content"
                            android:text="servent_class"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/prototype"
                            style="@style/double_item_text_style"
                            android:layout_height="wrap_content"
                            android:text="\?\?\?" />
                        <TextView
                            android:id="@+id/alignment"
                            style="@style/double_item_text_style"
                            android:layout_height="wrap_content"
                            android:text="\?\?\?" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="4dp"
            android:padding="16dp"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/craft_name"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/craft_image"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/craft_description"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore!"
            android:gravity="top|center"
            android:layout_gravity="center"
            android:onClick="onClickExplore"
            android:background="@drawable/gudago_run"
            />
    </LinearLayout>

</ScrollView>